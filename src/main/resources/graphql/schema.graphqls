enum Attendance {
    ATTENDING
    NOT_ATTENDING
    MAYBE
}

type Event {
    id: ID!
}

type Invitation {
    id: ID!
    person_id: Int
    event_id: Int
    attendance: Attendance
}

type Query {
    allEvents: [Event]
    getInvitationById(id: Int): Invitation
}

type Mutation {
    setAttendance(attendance: Attendance, invitation_id: Int): Int
}

schema {
    query: Query
}